.label_extra
  display: table-cell

.big_screen
  display: block

.table_bigscreen
  display: table

.all_screen #id_ubicacion
  margin: .7em

.ms-custom-form
  height: 5em

.money-text
  color: orange

#btn-primarymenu
  background-color: rgb(211, 63, 63)
  background-image: none

.navbar .nav > li > a
  padding: 5px 15px 4px

#span_alerta_unidades
  font-size: 12px
  display: inline

.small_screen_block
  display: none

